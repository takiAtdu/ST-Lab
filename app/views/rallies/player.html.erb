<% provide(:title, "Rallies") %>

<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <title><%= yield(:title) %> | Softtennis App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'rallies', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  </head>

  <body>
    <div class="box">
      <div class="top">
        <div class="title">
          <%= "乱打動画 (#{@name} 選手)" %>
        </div>
      </div>

      <div class="main">
        <div class="rallies">
          <% @rallies.each do |r| %>
            <div class="rally">
              <%= link_to image_tag(r.img, class: "img"), r.url, target: :_blank %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </body>
</html>
